{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/client/*"]
    },
    "rootDirs": [".", "./.react-router/types", "./.react-router-parcel/types"],
    "types": ["node"],

    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*",
    "react-router.config.ts",
    ".react-router/types/**/*",
    ".react-router-parcel/types/**/*"
  ]
}
